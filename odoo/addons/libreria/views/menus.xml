<odoo>
  <data>
    <record id="libreria.categoria_action" model="ir.actions.act_window">
        <field name="name">Categoría</field>
        <field name="res_model">libreria.categoria</field>
        <field name="view_mode">tree,form</field>
    </record>

        <record id="libreria.libro_action" model="ir.actions.act_window">
        <field name="name">Libro</field>
        <field name="res_model">libreria.libro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="libreria.root"
        name="Librería"
        sequence="10"/>

    <menuitem
        id="libreria.categoria_menu"
        name="Categorías"
        action="libreria.categoria_action"
        parent="libreria.root"
        sequence="10"/>

    <menuitem
        id="libreria.libro_menu"
        name="Libros"
        action="libreria.libro_action"
        parent="libreria.root"
        sequence="15"/>
  </data>
</odoo>