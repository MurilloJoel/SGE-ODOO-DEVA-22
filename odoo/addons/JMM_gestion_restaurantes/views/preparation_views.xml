<odoo>
    <!-- Dish Views -->
    <record id="view_dish_tree" model="ir.ui.view">
        <field name="name">kitchen.dish.tree</field>
        <field name="model">kitchen.dish</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="preparation_time"/>
            </tree>
        </field>
    </record>

    <record id="view_dish_form" model="ir.ui.view">
        <field name="name">kitchen.dish.form</field>
        <field name="model">kitchen.dish</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="preparation_method_id"/>
                        <field name="price"/>
                        <field name="calories"/>
                        <field name="preparation_time"/>
                    </group>
                    <field name="description"/>
                    <field name="ingredient_ids">
                        <tree>
                            <field name="name"/>
                            <field name="unit_of_measure"/>
                        </tree>
                    </field>
                    <field name="image" widget="image"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>