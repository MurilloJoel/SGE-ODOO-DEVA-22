<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vistas para Ingredient -->
    <record id="view_ingredient_tree" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.ingredient.tree</field>
        <field name="model">jmm_gestion_restaurantes.ingredient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="unit_of_measure"/>
                <field name="stock"/>
            </tree>
        </field>
    </record>

    <record id="view_ingredient_form" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.ingredient.form</field>
        <field name="model">jmm_gestion_restaurantes.ingredient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="unit_of_measure"/>
                        <field name="stock"/>
                        <field name="minimum_stock"/>
                        <field name="supplier"/>
                    </group>
                    <field name="dish_id">
                        <tree>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="preparation_time"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>