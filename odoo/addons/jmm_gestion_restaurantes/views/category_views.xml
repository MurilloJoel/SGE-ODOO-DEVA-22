<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vistas para Category -->
    <record id="view_category_tree" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.category.tree</field>
        <field name="model">jmm_gestion_restaurantes.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_category_form" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.category.form</field>
        <field name="model">jmm_gestion_restaurantes.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Platos">
                            <field name="dish_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="preparation_time"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ingredientes">
                            <field name="ingredient_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="unit_of_measure"/>
                                    <field name="stock"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>