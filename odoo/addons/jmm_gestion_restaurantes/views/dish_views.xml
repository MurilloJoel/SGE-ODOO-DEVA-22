<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vistas para Dish -->
    <record id="view_dish_tree" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.dish.tree</field>
        <field name="model">jmm_gestion_restaurantes.dish</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="preparation_time"/>
            </tree>
        </field>
    </record>

    <record id="view_dish_form" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.dish.form</field>
        <field name="model">jmm_gestion_restaurantes.dish</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image" widget="image" options="{'size': [265, 300]}"/>
                        <field name="category_id"/>
                        <field name="preparation_method_id"/>
                        <field name="price"/>
                        <field name="calories"/>
                        <field name="preparation_time"/>
                    </group>
                    <field name="ingredient_ids">
                        <tree>
                            <field name="name"/>
                            <field name="unit_of_measure"/>
                            <field name="supplier"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>