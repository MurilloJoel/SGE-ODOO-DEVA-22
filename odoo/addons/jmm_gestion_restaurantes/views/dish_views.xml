<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vistas para Dish -->
    <record id="view_dish_tree" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.dish.tree</field>
        <field name="model">jmm_gestion_restaurantes.dish</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="preparation_time"/>
            </tree>
        </field>
    </record>

    <record id="view_dish_form" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.dish.form</field>
        <field name="model">jmm_gestion_restaurantes.dish</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image" widget="image" options="{'size': [265, 300]}"/>
                        <field name="category_id"/>
                        <field name="preparation_method_id"/>
                        <field name="price"/>
                        <field name="calories"/>
                        <field name="preparation_time"/>
                    </group>
                    <field name="ingredient_ids">
                        <tree>
                            <field name="name"/>
                            <field name="unit_of_measure"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban para Dish -->
    <record id="view_dish_kanban" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.dish.kanban</field>
        <field name="model">jmm_gestion_restaurantes.dish</field>
        <field name="arch" type="xml">
            <kanban string="Platos">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_image">
                                <field name="image" widget="image" options="{'size': [265, 300]}"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div class="text-muted">
                                    <div>Category: <field name="category_id"/></div>
                                    <div>Preparation: <field name="preparation_method_id"/></div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="oe_kanban_content">
                                        <div>
                                            <i class="fa fa-money"/> 
                                            <field name="price" widget="monetary"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-fire"/> 
                                            <field name="calories"/> kcal
                                        </div>
                                        <div>
                                            <i class="fa fa-clock-o"/> 
                                            <field name="preparation_time"/> mins
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>