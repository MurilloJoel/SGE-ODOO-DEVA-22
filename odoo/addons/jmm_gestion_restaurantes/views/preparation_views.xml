<odoo>
    <!-- Preparation Views -->
    <record id="view_preparation_tree" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.preparation.tree</field>
        <field name="model">jmm_gestion_restaurantes.preparation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="temperature"/>
                <field name="time"/>
                <field name="equipment"/>
            </tree>
        </field>
    </record>

    <record id="view_preparation_form" model="ir.ui.view">
        <field name="name">jmm_gestion_restaurantes.preparation.form</field>
        <field name="model">jmm_gestion_restaurantes.preparation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="temperature"/>
                        <field name="time"/>
                        <field name="equipment"/>
                    </group>
                    <field name="description"/>
                    <!-- Vista anidada para dish_ids -->
                    <field name="dish_ids">
                        <tree>
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="preparation_time"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>