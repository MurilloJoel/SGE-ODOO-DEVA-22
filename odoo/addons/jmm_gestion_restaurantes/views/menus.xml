<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Acciones -->
        <record id="action_category" model="ir.actions.act_window">
            <field name="name">Categorías</field>
            <field name="res_model">jmm_gestion_restaurantes.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_dish" model="ir.actions.act_window">
            <field name="name">Platos</field>
            <field name="res_model">jmm_gestion_restaurantes.dish</field>
            <field name="view_mode">kanban,tree,form</field>  <!-- Vista Kanban añadida -->
        </record>

        <record id="action_ingredient" model="ir.actions.act_window">
            <field name="name">Ingredientes</field>
            <field name="res_model">jmm_gestion_restaurantes.ingredient</field>
            <field name="view_mode">kanban,tree,form,pivot</field> <!-- Vistas Kanban y Pivot añadidas -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Crea tu primer ingrediente</p>
            </field>
        </record>

        <record id="action_preparation" model="ir.actions.act_window">
            <field name="name">Métodos de Preparación</field>
            <field name="res_model">jmm_gestion_restaurantes.preparation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú Principal -->
        <menuitem id="menu_root" name="Gestión de Cocina" sequence="10"/>

        <!-- Submenús -->
        <menuitem id="menu_category" name="Categorías" parent="menu_root" action="action_category" sequence="10"/>
        <menuitem id="menu_dish" name="Platos" parent="menu_root" action="action_dish" sequence="20"/>
        <menuitem id="menu_ingredient" name="Ingredientes" parent="menu_root" action="action_ingredient" sequence="30"/>
        <menuitem id="menu_preparation" name="Métodos de Preparación" parent="menu_root" action="action_preparation" sequence="40"/>
    </data>
</odoo>