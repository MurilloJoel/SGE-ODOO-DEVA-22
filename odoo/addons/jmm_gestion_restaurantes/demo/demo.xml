<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <!-- Registros para Categorías -->
    <record id="demo_category_1" model="jmm_gestion_restaurantes.category">
      <field name="name">Entrantes</field>
      <field name="description">Categoría de entrantes.</field>
      <field name="active" eval="True"/>
    </record>
    <record id="demo_category_2" model="jmm_gestion_restaurantes.category">
      <field name="name">Platos Principales</field>
      <field name="description">Categoría de platos principales.</field>
      <field name="active" eval="True"/>
    </record>
    <record id="demo_category_3" model="jmm_gestion_restaurantes.category">
      <field name="name">Postres</field>
      <field name="description">Categoría de postres.</field>
      <field name="active" eval="True"/>
    </record>
    <record id="demo_category_4" model="jmm_gestion_restaurantes.category">
      <field name="name">Bebidas</field>
      <field name="description">Categoría de bebidas.</field>
      <field name="active" eval="True"/>
    </record>
    <record id="demo_category_5" model="jmm_gestion_restaurantes.category">
      <field name="name">Ensaladas</field>
      <field name="description">Categoría de ensaladas.</field>
      <field name="active" eval="True"/>
    </record>

    <!-- Registros para Métodos de Preparación -->
    <record id="demo_preparation_1" model="jmm_gestion_restaurantes.preparation">
      <field name="name">Frito</field>
      <field name="description">Preparación frita.</field>
      <field name="temperature">180.0</field>
      <field name="time">10.0</field>
      <field name="equipment">Freidora</field>
    </record>
    <record id="demo_preparation_2" model="jmm_gestion_restaurantes.preparation">
      <field name="name">Asado</field>
      <field name="description">Preparación asada en horno.</field>
      <field name="temperature">200.0</field>
      <field name="time">20.0</field>
      <field name="equipment">Horno</field>
    </record>
    <record id="demo_preparation_3" model="jmm_gestion_restaurantes.preparation">
      <field name="name">Cocido</field>
      <field name="description">Preparación cocida.</field>
      <field name="temperature">100.0</field>
      <field name="time">30.0</field>
      <field name="equipment">Olla</field>
    </record>
    <record id="demo_preparation_4" model="jmm_gestion_restaurantes.preparation">
      <field name="name">Al vapor</field>
      <field name="description">Preparación al vapor.</field>
      <field name="temperature">90.0</field>
      <field name="time">15.0</field>
      <field name="equipment">Vaporera</field>
    </record>
    <record id="demo_preparation_5" model="jmm_gestion_restaurantes.preparation">
      <field name="name">Crudo</field>
      <field name="description">Sin cocción.</field>
      <field name="temperature">0.0</field>
      <field name="time">0.0</field>
      <field name="equipment">Ninguno</field>
    </record>

    <!-- Registros para Ingredientes -->
    <record id="demo_ingredient_1" model="jmm_gestion_restaurantes.ingredient">
      <field name="name">Tomate</field>
      <field name="description">Tomate fresco.</field>
      <field name="category_id" ref="demo_category_5"/>
      <field name="unit_of_measure">kg</field>
      <field name="stock">10.0</field>
      <field name="minimum_stock">2.0</field>
      <field name="supplier">Proveedor A</field>
    </record>
    <record id="demo_ingredient_2" model="jmm_gestion_restaurantes.ingredient">
      <field name="name">Queso</field>
      <field name="description">Queso mozzarella.</field>
      <field name="category_id" ref="demo_category_1"/>
      <field name="unit_of_measure">kg</field>
      <field name="stock">5.0</field>
      <field name="minimum_stock">1.0</field>
      <field name="supplier">Proveedor B</field>
    </record>
    <record id="demo_ingredient_3" model="jmm_gestion_restaurantes.ingredient">
      <field name="name">Harina</field>
      <field name="description">Harina de trigo.</field>
      <field name="category_id" ref="demo_category_2"/>
      <field name="unit_of_measure">kg</field>
      <field name="stock">20.0</field>
      <field name="minimum_stock">5.0</field>
      <field name="supplier">Proveedor C</field>
    </record>
    <record id="demo_ingredient_4" model="jmm_gestion_restaurantes.ingredient">
      <field name="name">Lechuga</field>
      <field name="description">Lechuga fresca.</field>
      <field name="category_id" ref="demo_category_5"/>
      <field name="unit_of_measure">kg</field>
      <field name="stock">8.0</field>
      <field name="minimum_stock">2.0</field>
      <field name="supplier">Proveedor D</field>
    </record>
    <record id="demo_ingredient_5" model="jmm_gestion_restaurantes.ingredient">
      <field name="name">Aceite de oliva</field>
      <field name="description">Aceite extra virgen.</field>
      <field name="category_id" ref="demo_category_4"/>
      <field name="unit_of_measure">l</field>
      <field name="stock">15.0</field>
      <field name="minimum_stock">3.0</field>
      <field name="supplier">Proveedor E</field>
    </record>

    <!-- Registros para Platos -->
<record id="demo_dish_1" model="jmm_gestion_restaurantes.dish">
  <field name="name">Ensalada Mixta</field>
  <field name="description">Ensalada con tomate, lechuga y aderezo de aceite de oliva.</field>
  <field name="category_id" ref="demo_category_5"/>
  <field name="preparation_method_id" ref="demo_preparation_5"/>
  <field name="ingredient_ids" eval="[(6, 0, [ref('demo_ingredient_1'), ref('demo_ingredient_4'), ref('demo_ingredient_5')])]"/>
  <field name="active" eval="True"/>
  <field name="price">8.5</field>
  <field name="calories">150.0</field>
  <field name="preparation_time">5.0</field>
  <!-- Se carga la imagen localmente en formato base64 -->
  <field name="image" type="base64" file="jmm_gestion_restaurantes/static/description/ensalada.png"/>
</record>

<record id="demo_dish_2" model="jmm_gestion_restaurantes.dish">
  <field name="name">Pizza Margherita</field>
  <field name="description">Pizza clásica con queso mozzarella y salsa de tomate.</field>
  <field name="category_id" ref="demo_category_2"/>
  <field name="preparation_method_id" ref="demo_preparation_2"/>
  <field name="ingredient_ids" eval="[(6, 0, [ref('demo_ingredient_2'), ref('demo_ingredient_3'), ref('demo_ingredient_1')])]"/>
  <field name="active" eval="True"/>
  <field name="price">12.0</field>
  <field name="calories">800.0</field>
  <field name="preparation_time">15.0</field>
  <!-- Ruta corregida -->
  <field name="image" type="base64" file="jmm_gestion_restaurantes/static/description/margarita.png"/>
</record>

<record id="demo_dish_3" model="jmm_gestion_restaurantes.dish">
  <field name="name">Lasaña</field>
  <field name="description">Lasaña italiana con capas de queso y salsa de tomate.</field>
  <field name="category_id" ref="demo_category_2"/>
  <field name="preparation_method_id" ref="demo_preparation_2"/>
  <field name="ingredient_ids" eval="[(6, 0, [ref('demo_ingredient_2'), ref('demo_ingredient_3'), ref('demo_ingredient_1')])]"/>
  <field name="active" eval="True"/>
  <field name="price">14.5</field>
  <field name="calories">900.0</field>
  <field name="preparation_time">25.0</field>
  <!-- Se carga la imagen localmente en formato base64 -->
  <field name="image" type="base64" file="jmm_gestion_restaurantes/static/description/lasagna.png"/>
</record>

<record id="demo_dish_4" model="jmm_gestion_restaurantes.dish">
  <field name="name">Paella</field>
  <field name="description">Paella tradicional con mariscos y verduras.</field>
  <field name="category_id" ref="demo_category_2"/>
  <field name="preparation_method_id" ref="demo_preparation_3"/>
  <field name="ingredient_ids" eval="[(6, 0, [ref('demo_ingredient_1'), ref('demo_ingredient_5')])]"/>
  <field name="active" eval="True"/>
  <field name="price">16.0</field>
  <field name="calories">700.0</field>
  <field name="preparation_time">30.0</field>
  <!-- Se carga la imagen localmente en formato base64 -->
  <field name="image" type="base64" file="jmm_gestion_restaurantes/static/description/paella.png"/>
</record>

<record id="demo_dish_5" model="jmm_gestion_restaurantes.dish">
  <field name="name">Tarta de Queso</field>
  <field name="description">Postre cremoso con base de galleta y cobertura de queso.</field>
  <field name="category_id" ref="demo_category_3"/>
  <field name="preparation_method_id" ref="demo_preparation_2"/>
  <field name="ingredient_ids" eval="[(6, 0, [ref('demo_ingredient_2')])]"/>
  <field name="active" eval="True"/>
  <field name="price">7.0</field>
  <field name="calories">500.0</field>
  <field name="preparation_time">20.0</field>
  <!-- Se carga la imagen localmente en formato base64 -->
  <field name="image" type="base64" file="jmm_gestion_restaurantes/static/description/tarta_queso.png"/>
</record>
  </data>
</odoo>
